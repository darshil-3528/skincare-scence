{% comment %} {% doc %}
  @prompt
    Create a Shopify section for a fully responsive slideshow. Each slide should support:
    
    Desktop image and separate mobile image
    
    Optional title, subtitle, button with link
    
    Dynamic number of slides (add, remove, reorder in theme editor)
    
    Autoplay on/off, arrows, dots options
    
    Lazy load images, responsive on all devices

{% enddoc %} {% endcomment %}
{% comment %} {% assign ai_gen_id = block.id | replace: '_', '' | downcase %} {% endcomment %}

{% style %}
  .ai-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-slideshow-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slide_height_desktop }}px;
  }

  .ai-slideshow-track-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .ai-slide-{{ ai_gen_id }} {
    position: relative;
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slide-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-slide-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 40px 20px;
    max-width: 600px;
    color: {{ block.settings.text_color }};
  }

  .ai-slide-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-slide-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-slideshow-arrows-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.8);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    transition: background-color 0.3s ease;
  }

  .ai-slideshow-arrows-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 1);
  }

  .ai-slideshow-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-slideshow-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-slideshow-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 3;
  }

  .ai-slideshow-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-slideshow-dot-{{ ai_gen_id }}.active {
    background: rgba(255, 255, 255, 1);
  }

  .ai-slide-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slide-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-slide-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    border-radius: 4px;
    font-size: 14px;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-slideshow-container-{{ ai_gen_id }} {
      height: {{ block.settings.slide_height_mobile }}px;
    }

    .ai-slide-content-{{ ai_gen_id }} {
      padding: 20px 16px;
      max-width: 90%;
    }

    .ai-slide-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-slide-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-slideshow-arrows-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-slideshow-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-slideshow-next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
