<responsive-slideshow-{{ ai_gen_id }}
  class="ai-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slideshow-container-{{ ai_gen_id }}">
    <div class="ai-slideshow-track-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
          assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'
          assign title_key = 'slide_' | append: i | append: '_title'
          assign subtitle_key = 'slide_' | append: i | append: '_subtitle'
          assign button_text_key = 'slide_' | append: i | append: '_button_text'
          assign button_link_key = 'slide_' | append: i | append: '_button_link'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign desktop_image = block.settings[desktop_image_key]
          assign mobile_image = block.settings[mobile_image_key]
          assign title = block.settings[title_key]
          assign subtitle = block.settings[subtitle_key]
          assign button_text = block.settings[button_text_key]
          assign button_link = block.settings[button_link_key]
        %}

        {% if slide_enabled %}
          <div class="ai-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
            {% if desktop_image or mobile_image %}
              <picture>
                {% if mobile_image %}
                  <source
                    media="(max-width: 749px)"
                    srcset="{{ mobile_image | image_url: width: 800 }}"
                  >
                {% endif %}
                {% if desktop_image %}
                  <img
                    src="{{ desktop_image | image_url: width: 1920 }}"
                    alt="{{ desktop_image.alt | escape }}"
                    class="ai-slide-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ desktop_image.width }}"
                    height="{{ desktop_image.height }}"
                  >
                {% else %}
                  <div class="ai-slide-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                    <div class="ai-slide-empty-state-{{ ai_gen_id }}">
                      Add slide {{ i }} images
                    </div>
                  </div>
                {% endif %}
              </picture>
            {% else %}
              <div class="ai-slide-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-slide-empty-state-{{ ai_gen_id }}">
                  Add slide {{ i }} images
                </div>
              </div>
            {% endif %}

            {% if title != blank or subtitle != blank or button_text != blank %}
              <div class="ai-slide-content-{{ ai_gen_id }}">
                {% if title != blank %}
                  <h2 class="ai-slide-title-{{ ai_gen_id }}">{{ title }}</h2>
                {% endif %}
                {% if subtitle != blank %}
                  <p class="ai-slide-subtitle-{{ ai_gen_id }}">{{ subtitle }}</p>
                {% endif %}
                {% if button_text != blank and button_link != blank %}
                  <a href="{{ button_link }}" class="ai-slide-button-{{ ai_gen_id }}">
                    {{ button_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_arrows %}
      <button class="ai-slideshow-arrows-{{ ai_gen_id }} ai-slideshow-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      <button class="ai-slideshow-arrows-{{ ai_gen_id }} ai-slideshow-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-slideshow-dots-{{ ai_gen_id }}"></div>
    {% endif %}
  </div>
</responsive-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class ResponsiveSlideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
        this.isAutoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slideshow-track-{{ ai_gen_id }}');
        this.slideElements = this.querySelectorAll('.ai-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slideshow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slideshow-next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-slideshow-dots-{{ ai_gen_id }}');

        this.slides = Array.from(this.slideElements);
        
        if (this.slides.length === 0) return;

        this.setupDots();
        this.setupEventListeners();
        this.updateSlidePosition();

        if (this.isAutoplay && this.slides.length > 1) {
          this.startAutoplay();
        }
      }

      setupDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        this.slides.forEach((_, index) => {
          const dot = document.createElement('button');
          dot.className = `ai-slideshow-dot-{{ ai_gen_id }}${index === 0 ? ' active' : ''}`;
          dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.isAutoplay) this.startAutoplay();
        });

        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        this.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
          this.pauseAutoplay();
        });

        this.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          currentX = e.touches[0].clientX;
        });

        this.addEventListener('touchend', () => {
          if (!isDragging) return;
          isDragging = false;

          const diff = startX - currentX;
          if (Math.abs(diff) > 50) {
            if (diff > 0) {
              this.nextSlide();
            } else {
              this.prevSlide();
            }
          }

          if (this.isAutoplay) this.startAutoplay();
        });
      }

      updateSlidePosition() {
        if (!this.track) return;

        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;

        const dots = this.dotsContainer.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlidePosition();
        this.resetAutoplay();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlidePosition();
        this.resetAutoplay();
      }

      prevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.updateSlidePosition();
        this.resetAutoplay();
      }

      startAutoplay() {
        if (!this.isAutoplay || this.slides.length <= 1) return;

        this.pauseAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      pauseAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        if (this.isAutoplay) {
          this.pauseAutoplay();
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.pauseAutoplay();
      }
    }

    customElements.define('responsive-slideshow-{{ ai_gen_id }}', ResponsiveSlideshow{{ ai_gen_id }});
  })();
</script>

