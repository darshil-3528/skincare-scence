    --ai-slider-height-desktop: {% if block.settings.height_desktop == 'fullscreen' %}100vh{% elsif block.settings.height_desktop == 'auto' %}auto{% else %}{{ block.settings.custom_height_desktop }}px{% endif %};
    --ai-slider-width-mobile: {% if block.settings.width_mobile == 'full' %}100%{% elsif block.settings.width_mobile == 'container' %}min(100%, 1200px){% else %}{{ block.settings.custom_width_mobile }}{% if block.settings.width_unit_mobile == 'px' %}px{% else %}%{% endif %}{% endif %};
